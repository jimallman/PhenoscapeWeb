<% if publications.blank? %>
  <strong>Any</strong>
<% else %>
  <% count = 0 %> 
  <% publications.each do |index, publication_id| %>
    <%= render :partial => 'search/publication_filter_item', :locals => {:publication_id => publication_id, :index => count} %>
    <% count += 1 %>
  <% end %>
<% end %>
